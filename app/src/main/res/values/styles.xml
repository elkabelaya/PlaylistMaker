<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_xs</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/radius_m</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="settings_button" parent="@style/Widget.AppCompat.Button.Borderless" >
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/text_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:paddingHorizontal">@dimen/padding_m</item>
    </style>

    <style name="action_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/radius_xxxl</item>
        <item name="android:backgroundTint">@color/background_inverted</item>
        <item name="android:textColor">@color/text_inverted</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_xm</item>
        <item name="android:paddingHorizontal">@dimen/padding_sm</item>
        <item name="android:paddingVertical">@dimen/padding_xss</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="app_toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_toolbar</item>
        <item name="colorControlNormal">@color/text_toolbar</item>
        <item name="tint">@color/text_toolbar</item>
    </style>

    <style name="app_toolbar_title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_xl</item>
    </style>

    <style name="app_switch" parent="settings_button">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/padding_xl</item>
        <item name="android:paddingEnd">@dimen/padding_s</item>
        <item name="android:thumbTint">@color/switch_thumb_colors</item>
        <item name="android:trackTint">@color/switch_track_colors</item>
        <item name="android:switchMinWidth">@dimen/switch_size</item>
    </style>
</resources>