<?xml version="1.0" encoding="utf-8"?>


<navigation xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/search_navigation"
app:startDestination="@id/search_fragment">

    <fragment
        android:id="@+id/search_fragment"
        android:name="com.example.playlistmaker.search.presentation.SearchFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_search">
    <action
        android:id="@+id/action_search_playerFragment"
        app:destination="@id/player_fragment"
        app:popUpTo="@id/search_fragment"
        style="@style/NavigationAnimation"
        app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/player_fragment"
        android:name="com.example.playlistmaker.player.presentation.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" />
</navigation>