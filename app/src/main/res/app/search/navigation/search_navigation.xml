<?xml version="1.0" encoding="utf-8"?>


<navigation xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/search_navigation"
app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.search.presentation.SearchFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_search">
    <action
        android:id="@+id/action_global_playerFragment"
        app:destination="@id/playerFragment"
        app:popUpTo="@id/playerFragment"
        style="@style/NavigationAnimation"
        app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.playlistmaker.player.presentation.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" />


</navigation>