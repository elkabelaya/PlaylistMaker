<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".search.presentation.SearchActivity"
        android:orientation="vertical"
        android:background="@color/background">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar"/>
        <include android:id="@+id/searchbar"
            layout="@layout/searchbar"/>
        <include android:id="@+id/progressbar"
            layout="@layout/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10xl"
            android:visibility="gone"/>
        <include android:id="@+id/error_stub"
            layout="@layout/error_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_9xl"
            android:layout_marginBottom="@dimen/padding_xl"
            android:visibility="gone"/>
        <Button android:id="@+id/refresh_button"
            style="@style/action_button"
            android:text="@string/search_refresh"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/history_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/search_history"
                android:textSize="@dimen/text_l"
                android:textColor="@color/text_title"
                android:layout_marginBottom="@dimen/padding_s"
                android:layout_marginTop="@dimen/padding_7xl"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button android:id="@+id/clear_button"
                style="@style/action_button"
                android:text="@string/search_history_clear"
                android:layout_marginBottom="@dimen/padding_4xl"
                android:layout_marginTop="@dimen/padding_xl"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracks_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>