<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/search_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_search_box"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="end">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="@dimen/padding_xs"
            android:paddingStart="@dimen/padding_s"
            android:paddingEnd="@dimen/icon_width"
            android:background="@null"
            android:fontFamily="@font/ys_display_regular"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/text_search"
            android:textSize="@dimen/text_m"
            android:hint="@string/main_search"
            android:textColorHint="@color/hint_search"
            android:maxLines="1"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="@dimen/padding_xxs"
            android:drawableTint="@color/hint_search"
            tools:ignore="LabelFor"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/shape_search_cursor"/>

        <ImageButton
            android:id="@+id/reset_button"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_gravity="end|center_vertical"
            android:background="@null"
            android:foreground="?selectableItemBackground"
            android:src="@drawable/ic_close"
            android:visibility="gone"
            app:tint="@color/hint_search"
            tools:ignore="ContentDescription,ObsoleteLayoutParam"
            tools:visibility="visible" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>