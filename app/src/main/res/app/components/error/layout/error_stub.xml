<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.playlistmaker.error.ErrorViewModel" />
        <import type="com.example.playlistmaker.error.ErrorType" />
        <import type="android.view.View"/>
        <variable
            name="errorViewModel"
            type="com.example.playlistmaker.error.ErrorViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{errorViewModel == null ? View.GONE : View.VISIBLE}">

        <ImageView
            android:src="@{errorViewModel.type == ErrorType.WIFI ? @drawable/ic_error_wifi : @drawable/ic_error_empty}"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_gravity="center"
            tools:src="@drawable/ic_error_wifi"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/text_l"
            android:textColor="@color/text_error"
            android:textAlignment="center"
            android:paddingTop="@dimen/padding_m"
            android:paddingHorizontal="@dimen/padding_xl"
            android:text="@{errorViewModel.text}"
            tools:text="@string/error_wifi"/>
    </LinearLayout>
</layout>