<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".common.presentation.error.ErrorFragment">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/icon_xxxl"
            android:layout_height="@dimen/icon_xxxl"
            android:layout_gravity="center"
            tools:src="@drawable/ic_error_wifi"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="@dimen/text_l"
            android:textColor="@color/text_error"
            android:textAlignment="center"
            android:paddingTop="@dimen/padding_m"
            android:paddingHorizontal="@dimen/padding_xl"
            tools:text="@string/error_wifi"/>
    </LinearLayout>

</FrameLayout>