<?xml version="1.0" encoding="utf-8"?>


<navigation xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/media_navigation"
app:startDestination="@id/media_fragment">

    <fragment
        android:id="@+id/media_fragment"
        android:name="com.example.playlistmaker.media.presentation.MediaFragment"
        android:label="fragment_media"
        tools:layout="@layout/fragment_media">
    <action
        android:id="@+id/action_media_playerFragment"
        app:destination="@id/player_fragment"
        app:popUpTo="@id/media_fragment"
        style="@style/NavigationAnimation"
        app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/player_fragment"
        android:name="com.example.playlistmaker.player.presentation.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" />
</navigation>