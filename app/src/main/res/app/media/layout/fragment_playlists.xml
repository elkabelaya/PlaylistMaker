<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".media.presentation.PlaylistsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".search.presentation.SearchActivity"
        android:orientation="vertical"
        android:background="@color/background">
    <Button android:id="@+id/create_button"
        style="@style/action_button"
        android:text="@string/media_playlist_create"
        android:layout_marginTop="@dimen/padding_xl"/>
    <com.example.playlistmaker.common.presentation.error.ErrorView
        android:id="@+id/error"
        android:layout_marginTop="@dimen/padding_7xl"
        style="@style/ErrorStyle"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>