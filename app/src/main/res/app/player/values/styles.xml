<resources>
    <style name="player_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:paddingVertical">@dimen/padding_xs</item>
    </style>
    <style name="player_album_info" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:paddingVertical">@dimen/padding_xs</item>
        <item name="android:layout_marginLeft">@dimen/padding_m</item>
    </style>
    <style name="player_info" parent="@style/player_album_info">
        <item name="android:maxLines">1</item>
    </style>
    <style name="player_button">
        <item name="android:layout_width">@dimen/icon_xl</item>
        <item name="android:layout_height">@dimen/icon_xl</item>
        <item name="android:background">@drawable/bg_player_button</item>
    </style>
    <style name="player_play_button">
        <item name="android:layout_width">@dimen/icon_xxl</item>
        <item name="android:layout_height">@dimen/icon_xxl</item>
        <item name="android:background">@color/background</item>
    </style>
</resources>